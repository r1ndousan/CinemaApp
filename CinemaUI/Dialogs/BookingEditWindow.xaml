<Window x:Class="CinemaUI.Dialogs.BookingEditWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Редактировать бронирование" Height="312" Width="350">
    <StackPanel Margin="10" VerticalAlignment="Center">
        <TextBlock Text="Id клиента:"/>
        <TextBox x:Name="ClientIdBox" Margin="0,0,0,5"/>
        <TextBlock Text="Id сеанса:"/>
        <TextBox x:Name="SessionIdBox" Margin="0,0,0,5"/>
        <TextBlock Text="Мест забронировано:"/>
        <TextBox x:Name="SeatsBox" Margin="0,0,0,5"/>
        <TextBlock Text="Дата:"/>
        <DatePicker x:Name="DatePicker" Margin="0,0,0,5"/>
        <TextBlock Text="Время:"/>
        <TextBox x:Name="TimeBox" Margin="0,0,0,10"/>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="OK"    Width="60" Margin="0,0,5,0" Click="Ok_Click"/>
            <Button Content="Отмена" Width="60" Click="Cancel_Click"/>
        </StackPanel>
    </StackPanel>
</Window>

