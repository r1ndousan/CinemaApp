<Window x:Class="CinemaUI.Dialogs.UserEditWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Редактировать пользователя" Height="218" Width="300">
    <StackPanel Margin="10" VerticalAlignment="Center">
        <TextBlock Text="Имя пользователя:"/>
        <TextBox x:Name="UsernameBox" Margin="0,0,0,5"/>
        <TextBlock Text="Пароль:"/>
        <PasswordBox x:Name="PassBox" Margin="0,0,0,5"/>
        <TextBlock Text="Роль:"/>
        <TextBox x:Name="RoleBox" Margin="0,0,0,10"/>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="OK"    Width="60" Margin="0,0,5,0" Click="Ok_Click"/>
            <Button Content="Отмена" Width="60" Click="Cancel_Click"/>
        </StackPanel>
    </StackPanel>
</Window>
