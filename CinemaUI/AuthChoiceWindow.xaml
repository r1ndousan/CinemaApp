<Window x:Class="CinemaUI.AuthChoiceWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Добро пожаловать" Height="200" Width="300">
    <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Margin="20" >
        <TextBlock Text="Добро пожаловать в CinemaApp" 
               FontSize="16" TextAlignment="Center" Margin="0,0,0,20"/>
        <Button Content="Войти" Width="200" Height="30" Margin="0,5" 
            Click="LoginButton_Click"/>
        <Button Content="Регистрация" Width="200" Height="30" Margin="0,5" 
            Click="RegisterButton_Click"/>
    </StackPanel>
</Window>

