<Window x:Class="CinemaUI.RegisterForm"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Регистрация" Height="260" Width="300">
    <StackPanel Margin="20" VerticalAlignment="Center">
        <TextBlock Text="Новый логин:"/>
        <TextBox x:Name="UsernameBox" Margin="0,5"/>
        <TextBlock Text="Пароль:"/>
        <PasswordBox x:Name="PasswordBox" Margin="0,5"/>
        <TextBlock Text="Повторите пароль:"/>
        <PasswordBox x:Name="ConfirmBox" Margin="0,5"/>
        <Button Content="Зарегистрироваться" Width="180" Height="30" Margin="0,10,0,0"
            HorizontalAlignment="Center"
            Click="Register_Click"/>
    </StackPanel>
</Window>
