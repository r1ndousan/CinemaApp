<Window x:Class="CinemaUI.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Вход" Height="180" Width="300">
    <StackPanel Margin="10">
        <TextBlock Text="Username:"/>
        <TextBox x:Name="UsernameBox" Margin="0,0,0,5"/>
        <TextBlock Text="Password:"/>
        <PasswordBox x:Name="PasswordBox" Margin="0,0,0,10"/>
        <Button Content="Login" Click="Login_Click" HorizontalAlignment="Right" Width="80"/>
    </StackPanel>
</Window>


